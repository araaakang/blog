---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
	<p>{frontmatter.pubDate.toString().slice(0,10)}</p>
	<div class="tags">
		{frontmatter.tags.map((tag) => (
		  <p class="tag"><a href={`/tags/${tag}`}># {tag}</a></p>
		))}
	</div>
	{frontmatter.image && (
		<>
			<img class="w-full mt-4" src={frontmatter.image.url} alt={frontmatter.image.alt} />
			<p class="text-sm text-gray-500 text-center"><i><a href={frontmatter.image.source} target="_blank">Photo Source</a></i></p>
		</>
	)}
	<slot />
</BaseLayout>
